---
import NewTab from "./new-tab.astro"
import Svg from "./svg.astro"

type Props = {
  href: string
  icon: Parameters<typeof Svg>[0]["icon"]
  topLink?: boolean
}
const { href, icon, topLink } = Astro.props
---

<NewTab {href} aria-label={icon} class:list={[{link: topLink}]}>
  <Svg {icon} />
</NewTab>

<style>
  .link {
    width: 2.5rem;
    color: var(--top-icon);
  }
</style>
