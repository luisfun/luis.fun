---
import NewTab from "./new-tab.astro"
import { Icon } from "astro-icon/components"
import { type IconType } from "./icon-types"

type Props = {
  href: string
  icon: IconType
  class?: string
}
const { href, icon, ...rest } = Astro.props
---

<NewTab {href} aria-label={icon}>
  <Icon name={icon} {...rest} />
</NewTab>
