---
import Layout from "../components/layout.astro"
import Svg from "../components/svg.astro"
import Link from "../components/link.astro"
import Work from "../components/work.astro"
---

<Layout>
  <header>
    <div class="top-icon icon-rounded">
      <Svg icon="luisfun" class="top-icon-inner" />
    </div>
    <div class="links">
      <Link
        icon="github"
        href="https://github.com/luisfun"
      />
      <Link
        icon="npm"
        href="https://www.npmjs.com/~luisfun"
      />
      <Link
        icon="discord"
        href="https://discord.gg/5bKYuCcmfu"
      />
      <Link
        icon="dev"
        href="https://dev.to/luisfun"
      />
      <Link
        icon="patreon"
        href="https://www.patreon.com/luisfun"
      />
    </div>
  </header>
  <main>
    <div class="cards">
      <Work
        icon="paimon"
        title="Paimon+"
        category="website"
        site="https://paimon.plus"
        env={["Astro, Svelte, TailWind","Cloudflare Pages / D1"]}
        github="https://github.com/luisfun/paimon.plus"
      />
      <Work
        icon="hono"
        title="Discord Hono"
        category="npm-package"
        site="https://discord-hono.luis.fun"
        env={["Discord Bot","Cloudflare Workers"]}
        github="https://github.com/luisfun/discord-hono"
      />
      <Work
        icon="paint"
        title="AI Paint"
        category="website"
        site="https://ai-paint.luis.fun"
        env={["SvelteKit","Cloudflare Pages / AI"]}
        github="https://github.com/luisfun/ai-paint"
      />
      <Work
        icon="mimo"
        title="HoYo News"
        category="discord-bot"
        discord="https://discord.com/api/oauth2/authorize?client_id=1197426250743042069&permissions=2048&scope=bot"
        env={["News Delivery","Cloudflare Workers / D1"]}
        github="https://github.com/luisfun/discord-bot-hoyo-news"
      />
      <Work
        icon="workers"
        title="Cloudflare AI"
        category="discord-bot"
        env={["Playing with AI","Cloudflare Workers / AI"]}
        github="https://github.com/luisfun/discord-bot-cloudflare-ai"
      />
      <Work
        icon="luislab"
        title="My Blog"
        category="website"
        site="https://blog.luis.fun"
        env={["Gatsby","Cloudflare Pages"]}
      />
    </div>
  </main>
</Layout>

<style>
  header {
    margin: 4rem 0;
  }
  main {
    margin: 4rem 0;
  }
  .top-icon {
    width: 6rem;
    aspect-ratio: 1;
    margin: auto;
    color: var(--top-icon);
    background: var(--top-bg);
    outline: var(--border);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .top-icon-inner {
    width: 61.8034%;
    aspect-ratio: 1;
  }
  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
  }
  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, min(18rem, 100%));
    gap: 2rem;
    justify-content: center;
  }
</style>
